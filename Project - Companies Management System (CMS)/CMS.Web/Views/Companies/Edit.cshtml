@{
    ViewData["Title"] = "Edit Company";
}

@model CMS.Web.Models.Entities.Company

<br />
<h1>@ViewData["Title"]</h1>

@if (Model is null)
{
    <p>No company was found with this ID.</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Company ID</label>
            <input type="text" class="form-control" asp-for="CompID" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Companies">Delete</button>
        </div>
    </form>
}
