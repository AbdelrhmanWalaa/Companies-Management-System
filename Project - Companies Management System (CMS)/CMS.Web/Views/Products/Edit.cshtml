@{
    ViewData["Title"] = "Edit Product";
}

@model CMS.Web.Models.Entities.Product

<br />
<h1>@ViewData["Title"]</h1>

@if (Model is null)
{
    <p>No product was found with this ID.</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Product ID</label>
            <input type="text" class="form-control" asp-for="ProdID" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="mt-3">
            <label class="form-label">Price</label>
            <input type="text" class="form-control" asp-for="Price" />
        </div>

        <div class="mt-3">
            <label class="form-label">Company ID</label>
            <input type="text" class="form-control" asp-for="CompID" readonly />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save <!-- Font Awesome save icon -->
            </button>

            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Products">
                <i class="fas fa-trash-alt"></i> Delete <!-- Font Awesome delete icon -->
            </button>
        </div>
    </form>
}
