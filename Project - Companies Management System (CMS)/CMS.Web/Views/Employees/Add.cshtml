@{
    ViewData["Title"] = "Add Employee";
}

@model CMS.Web.Models.AddEmployeeViewModel

<br />
<h1>@ViewData["Title"]</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Position</label>
        <input type="text" class="form-control" asp-for="Position" />
    </div>

    <div class="mt-3">
        <label class="form-label">Account</label>
        <input type="email" class="form-control" asp-for="Account" />
    </div>

    <div class="mt-3">
        <label class="form-label">Phone Number</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" />
    </div>

    <div class="mt-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address" />
    </div>

    <div class="mt-3">
        <label class="form-label">Company ID</label>
        <input type="text" class="form-control" asp-for="CompID" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>